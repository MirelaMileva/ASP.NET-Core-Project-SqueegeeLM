@using SqueegeeLM.Services.Contracts

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager
@inject ICustomerService Customers

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        var userId = User.GetId();
        var userIsCustomer = Customers.UserIsCustomer(userId);
        var userIsAdmin = User.IsAdmin();

        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
                <img src="~/img/47284 - Copy.jpg" class="img-circle elevation-2" alt="User Image">
            </div>
            <div class="info">
                <a href="#" class="d-block">@User.Identity.Name</a>
            </div>
        </div>

        @if (userIsCustomer && !userIsAdmin)
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Appoitment" asp-action="UserAppoitments">My Appoitments</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Appoitment" asp-action="UserServices">My Services</a>
            </li>
        }
        else if (!userIsAdmin)
        {
            <nav class="mt-2">
                <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Customer" asp-action="Create">
                            <i class="fas fa-users"></i>
                            <p>
                                Become Customer
                            </p>
                        </a>
            </nav>
        }
        <nav class="mt-2">
                <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                            <i class="fas fa-user"></i>
                            <p>
                                Account
                            </p>
                        </a>
            </nav>
    }
</ul>

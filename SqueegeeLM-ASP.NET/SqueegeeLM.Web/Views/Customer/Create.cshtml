@model BecomeCustomerViewModel

@{
    ViewData["Title"] = "Become Customer";
}

<div class="row">
    <h2 class="heading-margin text-center">Become Customer</h2>

    <form method="post">
        <div class="form-group">
            <label asp-for="FirstName">First Name</label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="small text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastName">Last Name</label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="small text-danger"></span>
        </div>
         <div class="form-group">
            <label asp-for="PhoneNumber">Phone Number</label>
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="small text-danger"></span>
        </div>
         <input class="btn btn-primary mt-4" type="submit" value="Submit" />
    </form>
</div>